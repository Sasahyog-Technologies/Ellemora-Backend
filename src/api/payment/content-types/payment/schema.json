{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "paymentId": {
      "type": "string"
    },
    "paymentType": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "payment"
    },
    "status": {
      "type": "string"
    },
    "customizationId": {
      "type": "biginteger"
    },
    "label": {
      "type": "string"
    },
    "amount": {
      "type": "float"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "order",
        "customization"
      ]
    },
    "orderGroup": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order-group.order-group",
      "mappedBy": "payment"
    },
    "currency": {
      "type": "string"
    },
    "isTokenPayment": {
      "type": "boolean"
    },
    "paymentPurpose": {
      "type": "enumeration",
      "enum": [
        "FULL_PAYMENT",
        "COD_TOKEN",
        "COD_REMAINING"
      ]
    },
    "remainingAmount": {
      "type": "decimal"
    },
    "paidAmount": {
      "type": "decimal"
    },
    "discountAmount": {
      "type": "decimal"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "PENDING",
        "PARTIAL",
        "COMPLETED",
        "FAILED",
        "REFUNDED",
        "CANCELLED"
      ]
    },
    "razorpayDetails": {
      "type": "json"
    },
    "codPaymentDetails": {
      "type": "json",
      "required": false
    }
  }
}
