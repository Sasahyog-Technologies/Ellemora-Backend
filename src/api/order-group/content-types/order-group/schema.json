{
  "kind": "collectionType",
  "collectionName": "order_groups",
  "info": {
    "singularName": "order-group",
    "pluralName": "order-groups",
    "displayName": "Order Group",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "group"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "payment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::payment.payment",
      "inversedBy": "orderGroup"
    },
    "transection": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::transection.transection",
      "mappedBy": "orderGroup"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "PENDING",
        "CONFIRMED",
        "PROCESSING",
        "SHIPPED",
        "DELIVERED",
        "CANCELLED"
      ]
    },
    "trackingDetails": {
      "type": "json"
    },
    "expectedDeliveryDate": {
      "type": "datetime"
    },
    "currency": {
      "type": "string"
    },
    "shippingLabel": {
      "type": "string"
    },
    "orderNumber": {
      "type": "string",
      "unique": true
    },
    "totalAmount": {
      "type": "decimal"
    }
  }
}
